{
    "extends": [
      "stylelint-config-standard-scss",
      "stylelint-config-html",
      "stylelint-config-recommended-vue"
    ],
    "rules": {
      "indentation": 2,
      "string-quotes": "double",
      "color-hex-case": "lower",
      "color-named": "never",
      "max-nesting-depth": 3,
      "scss/dollar-variable-pattern": "^[_a-z][a-z0-9-]*$",
      "scss/at-mixin-pattern": "^[_a-z][a-z0-9-]*$"
    }
  }